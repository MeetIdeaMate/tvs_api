<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Define the pattern for the log file name -->
    <property name="LOG_FILE" value="logs/myapp.log" />

    <!-- Appender that writes to a rolling log file -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Specify the log file location -->
        <file>${LOG_FILE}</file>

        <!-- Define the rolling policy -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- File name pattern for monthly rotation -->
            <fileNamePattern>logs/myapp.%d{MM}.log</fileNamePattern>

            <!-- Number of rolling files to keep (3 months) -->
            <maxHistory>3</maxHistory>
        </rollingPolicy>

        <!-- Define the log format -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set the root logger level and appender -->
    <root level="info">
        <appender-ref ref="FILE" />
    </root>

</configuration>

